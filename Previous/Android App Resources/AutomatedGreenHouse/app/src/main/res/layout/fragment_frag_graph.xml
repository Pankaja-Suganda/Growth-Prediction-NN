<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:graphview="http://schemas.android.com/apk/res-auto"
    tools:context=".FragGraph">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ColorBackground">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LL_Graph"
                android:orientation="vertical">
                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/Divider_Top_Margin"
                    android:background="@color/ColorDivide"/>

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/MainGraph"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    />
                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/Divider_Top_Margin"
                    android:background="@color/ColorDivide"/>

            <!--Temperature Vs Height Graph-->
            <com.jjoe64.graphview.GraphView
                android:id="@+id/TemVsHeightGraph"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                />
            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/Divider_Top_Margin"
                android:background="@color/ColorDivide"/>

            <!--Humidity Vs Height Graph-->
            <com.jjoe64.graphview.GraphView
                android:id="@+id/HumVsHeightGraph"
                android:layout_width="match_parent"
                android:layout_height="200dip"
               />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/Divider_Top_Margin"
                android:background="@color/ColorDivide"/>

            <!--Moisture Vs Height Graph-->
            <com.jjoe64.graphview.GraphView
                android:id="@+id/MoisVsHeightGraph"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ColorDivide"/>

            <com.jjoe64.graphview.GraphView
                android:id="@+id/LightVsHeightGraph"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>